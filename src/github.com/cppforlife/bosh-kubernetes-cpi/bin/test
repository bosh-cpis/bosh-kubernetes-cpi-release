#!/bin/bash

result=0

bin=$(dirname $0)

echo -e "\n Formatting packages..."
go fmt github.com/cppforlife/bosh-kubernetes-cpi/...
let "result+=$?"

echo -e "\n Running build script to confirm everything compiles..."
$bin/build
$bin/build-linux-amd64
let "result+=$?"

if [ $result -eq 0 ]; then
  echo -e "\nSUITE SUCCESS"
else
  echo -e "\nSUITE FAILURE"
fi

exit $result
